<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <node name="mbf_cmd_vel_relay" pkg="topic_tools" type="relay" args="cmd_vel_internal cmd_vel" />

  <!-- Arguments -->
  <arg name="model" />
  <arg name="speed" />

  <arg name="namespace" />
  <arg name="frame" />

  <group ns="move_base_flex">
    <rosparam file="$(find arena_simulation_setup)/configs/mbf/local/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <rosparam
      file="$(find arena_simulation_setup)/entities/robots/$(arg model)/configs/mbf/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
      
    <param name="base_local_planner" value="DwaLocalPlannerROS" />
  </group>

  <!-- temp -->
  <group ns="move_base_legacy_relay">
    <rosparam file="$(find arena_simulation_setup)/configs/mbf/local/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <rosparam
      file="$(find arena_simulation_setup)/entities/robots/$(arg model)/configs/mbf/dwa_local_planner_params.yaml"
      command="load" subst_value="True" />
    <param name="base_local_planner" value="DwaLocalPlannerROS" />
  </group>
</launch>